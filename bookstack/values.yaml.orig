replicaCount: 1

image:
  repository: solidnerd/bookstack
  pullPolicy: IfNotPresent
  tag: latest

service:
  type: ClusterIP
  port: 80

ingress:
  enabled: true
  annotations: {}
  hosts:
    - host: bookstack.example.com
      paths: ["/"]
  tls:
    - hosts:
        - bookstack.example.com
      secretName: bookstack-tls
  clusterIssuer: letsencrypt-prod

persistence:
  enabled: true
  accessModes: ["ReadWriteOnce"]
  size: 10Gi
  storageClass: longhorn

serviceAccount:
  create: true
  name: ""

autoscaling:
  enabled: false
  minReplicas: 1
  maxReplicas: 10
  targetCPUUtilizationPercentage: 80

resources: {}
nodeSelector: {}
tolerations: []
affinity: {}
